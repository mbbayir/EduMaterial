@{
    ViewData["Title"] = "Index";
    ViewBag.ACourse = "nav-active";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

@model IEnumerable<EduMaterial.Models.Course>

@section Styles {
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Select2 CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

    <style>
        .badge {
            font-size: 14px;
            padding: 5px 10px;
            margin: 2px;
            border-radius: 12px;
            color: #fff;
            background-color: #007bff;
            display: inline-block;
        }

        .badge-secondary {
            background-color: #6c757d;
        }

        .badge:hover {
            opacity: 0.8;
        }
    </style>
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <button class="btn btn-primary custom-blue mb-3" data-toggle="modal" data-target="#addCourseModal">New Course Add</button>
            <div class="table-responsive">
                <table id="courseTable" class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Course Name</th>
                            <th>Description</th>
                            <th>Duration (Hours)</th>
                            <th>Filepath</th>
                            <th>File Size (Bytes)</th>
                            <th>Categories</th>
                            <th>Instructors</th>
                            <th>Producer</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Course Modal -->
<div class="modal fade" id="addCourseModal" tabindex="-1" role="dialog" aria-labelledby="addCourseModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCourseModalLabel">New Course Add</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="addCourseForm">
                    <div class="mb-3 row">
                        <label for="courseName" class="col-sm-3 col-form-label">Course Name:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="courseName" name="Name" required>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="courseDescription" class="col-sm-3 col-form-label">Course Description:</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" id="courseDescription" name="Description" maxlength="100" rows="3"></textarea>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="durationInHours" class="col-sm-3 col-form-label">Duration (in hours):</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" id="durationInHours" name="DurationInHours" required>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="filepath" class="col-sm-3 col-form-label">Filepath:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="filepath" name="Filepath">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="fileSize" class="col-sm-3 col-form-label">File Size (in bytes):</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" id="fileSize" name="FileSize">
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="categories" class="col-sm-3 col-form-label">Categories:</label>
                        <div class="col-sm-9">
                            <select class="form-control select2" id="categories" name="CategoryIds" multiple="multiple" style="width: 100%;">


                            </select>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label for="instructors" class="col-sm-3 col-form-label">Instructors:</label>
                        <div class="col-sm-9">
                            <select class="form-control select2" id="instructors" name="InstructorIds" multiple="multiple" style="width: 100%;">


                            </select>
                        </div>
                    </div>

                   

                    <div class="mb-3 row">
                        <label for="producers" class="col-sm-3 col-form-label">Producers:</label>
                        <div class="col-sm-9">
                            <select class="form-control select2" id="producers" name="ProducerIds" multiple="multiple" style="width: 100%;">



                                </select>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <button type="button" id="saveCourseButton" class="btn btn-primary me-md-2">Save Course</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <!-- Custom JS -->
    <script src="~/ajax/courses/index.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                placeholder: "Choose",
                allowClear: true,
                width: 'resolve'
            });
        });
    </script>
}
